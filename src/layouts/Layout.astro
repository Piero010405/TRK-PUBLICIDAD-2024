---
interface Props {
  title: string;
}

import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import { WhatsAppButton } from "../components/WhatsAppButton.jsx";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="TRK Publicidad" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/trkcon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.8/css/line.css"
    />
  </head>
  <body>
    <NavBar />
    <slot />
    <Footer />
    <WhatsAppButton client:visible />
  </body>
</html>

<style is:global>
  @charset "UTF-8";
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap");
  :root {
    --primary-color: #f54748;
    --secondary-color: #f48924;
    --third-color: #f7ed2e;
    /* --third-color: #ffbd59; */
    /* --third-color: #f5ddba; */
    --fourth-color: #ffe400;
    --fifth-color: #ffff4d;
    --background-color: #f3f5f8;

    --font-color: #363636;
    --bg-color: #fff;
    --heading-color: #060606;
    --footer-color: #131917;

    --border-radius: 8px;
    --border-radius-full: 30px;
    --border-color-light: #eee;

    --iframe-filter: grayscale(0%);

    --bg-grey: #f4f4f4;
    --bg-light: #fafafb;

    --serach-shadow: rgb(0 0 0 / 5%);
    --disable-color: #d8d6d6;
    --box-shadow: 0 1rem 3rem rgb(0 0 0 / 12%);
    --box-shadow-2: 0 25px 98px 0 rgb(0 0 0 / 3%);

    --layer: rgb(19 25 23 / 58%);
    --color-1: #6168ff;
    --color-2: #0abf53;
    --color-3: #ff4f81;
    --color-4: #ff9933;

    --dark-color: #222;
    --body-bg-color: #fff;
    --section-bg-color: #202834;
    --navigation-item-hover-color: #ffe400;

    --text-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
    --box-shadow-3: 0 5px 25px rgba(0 0 0 / 20%);

    --scroll-bar-color: #fff;
    --scroll-thumb-color: #282f4e;
    --scroll-thumb-hover-color: #454f6b;

    --font-poppins: "Poppins", system-ui, sans-serif;

    --shadow-color: 216deg 8% 60%;
    --shadow-elevation-low: 0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.34),
      0.4px 0.8px 1px -1.2px hsl(var(--shadow-color) / 0.34),
      1px 2px 2.5px -2.5px hsl(var(--shadow-color) / 0.34);
    --shadow-elevation-medium: 0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.36),
      0.8px 1.6px 2px -0.8px hsl(var(--shadow-color) / 0.36),
      2.1px 4.1px 5.2px -1.7px hsl(var(--shadow-color) / 0.36),
      5px 10px 12.6px -2.5px hsl(var(--shadow-color) / 0.36);

    --shadow-color2: 160deg 23% 1%;
    --shadow-elevation-low2: 0.3px 0.5px 0.7px hsl(var(--shadow-color2) / 0.34),
      0.4px 0.8px 1px -1.2px hsl(var(--shadow-color2) / 0.34),
      1px 2px 2.5px -2.5px hsl(var(--shadow-color2) / 0.34);
    --shadow-elevation-medium2: 0.3px 0.5px 0.7px
        hsl(var(--shadow-color2) / 0.36),
      0.8px 1.6px 2px -0.8px hsl(var(--shadow-color2) / 0.36),
      2.1px 4.1px 5.2px -1.7px hsl(var(--shadow-color2) / 0.36),
      5px 10px 12.6px -2.5px hsl(var(--shadow-color2) / 0.36);

    --shadow-color3: 58deg 82% 34%;
    --shadow-elevation-low3: 0.3px 0.5px 0.7px hsl(var(--shadow-color3) / 0.34),
      0.4px 0.8px 1px -1.2px hsl(var(--shadow-color3) / 0.34),
      1px 2px 2.5px -2.5px hsl(var(--shadow-color3) / 0.34);
    --shadow-elevation-medium3: 0.3px 0.5px 0.7px
        hsl(var(--shadow-color3) / 0.36),
      0.8px 1.6px 2px -0.8px hsl(var(--shadow-color3) / 0.36),
      2.1px 4.1px 5.2px -1.7px hsl(var(--shadow-color3) / 0.36),
      5px 10px 12.6px -2.5px hsl(var(--shadow-color3) / 0.36);
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: var(--font-poppins);
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-size: 1rem;
    color: var(--heading-color);
    background-color: var(--background-color);
    /* -webkit-text-size-adjust: 100%; */
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  }

  .hidden {
    overflow: hidden;
  }

  /* @keyframes reveal {
    from {
      opacity: 0;
      scale: 25%;
    }

    to {
      opacity: 1;
      scale: 100%;
    }
  }

  section {
    view-timeline-name: --section;
    view-timeline-axis: block;

    animation-timeline: --section;
    animation-name: reveal;

    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  } */

  /*SCROLL BAR*/
  ::-webkit-scrollbar {
    width: 10px;
    background: var(--scroll-bar-color);
  }

  ::-webkit-scrollbar-thumb {
    width: 10px;
    background: var(--third-color);
    border-radius: 2em;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--fourth-color);
    transition: 1s ease;
  }
</style>
