<style>
  .projects {
    padding: 0;
    margin: 0;
  }

  .projects h2 {
    text-align: center;
    padding-top: 10%;
    color: var(--footer-color);
    font-size: 4rem;
    text-transform: capitalize;
    font-weight: 900;
    position: relative;
    margin-bottom: 3rem;
  }

  .projects h2::after {
    position: absolute;
    content: '';
    background-color: var(--third-color);
    width: 15%;
    height: 5px;
    bottom: -5px;
    left: 50%;
    transform: translateX(-50%);
  }

  .gallery {
    padding: 10px;
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-gap: 10px;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-auto-rows: 250px;
    grid-auto-flow: dense;
    flex: none;
  }

  .gallery div img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s ease;
  }

  .gallery div img:hover {
    transform: scale(0.9);
  }

  /*vertical*/
  .v-stretch {
    grid-row: span 2;
  }

  /*horizontal*/
  .h-stretch {
    grid-column: span 2;
  }

  /*vertical-horizontal*/
  .big-stretch {
    grid-row: span 2;
    grid-column: span 2;
  }

  @media (max-width: 600px) {
    .projects h2 {
      font-size: 3rem;
    }
  }

  @media (max-width: 560px) {
    .v-stretch {
      grid-row: span 1;
    }

    .h-stretch {
      grid-column: span 1;
    }

    .big-stretch {
      grid-row: span 1;
      grid-column: span 1;
    }
  }
</style>
