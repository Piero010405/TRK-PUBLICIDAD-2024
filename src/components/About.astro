---
import { Image } from 'astro:assets'
import about1IMG from '../../public/img/about1.avif'
import about2IMG from '../../public/img/about2.avif'
import splah3IMG from '../../public/img/splash3.webp'
---

<section class='about' id='about'>
  <div class='main-about'>
    <article>
      <Image
        src={about1IMG}
        alt=''
        format='avif'
        quality={'mid'}
        alt='about image background'
      />
      <Image
        src={about2IMG}
        alt=''
        format='avif'
        quality={'mid'}
        alt='about paseo peatonal'
      />
    </article>
    <div class='about-text'>
      <Image
        src={splah3IMG}
        alt='splash image background'
        id='splash2'
        format='avif'
        quality={'mid'}
      />
      <h2>Nosotros</h2>
      <h5>Agencia de <span>Publicidad</span></h5>

      <p>
        Lorem, ipsum dolor sit amet consectetur adipisicing elit. Sit,
        voluptatem quidem esse dolorem laudantium, ex debitis similique
        deleniti, laborum est quia tempora minima? Voluptatem ratione dolores,
        porro et consequuntur voluptatibus.
      </p>
      <div class='center-button'>
        <a>Ver m√°s <i class='uil uil-search'></i></a>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    min-height: 100vh;
    padding: 78px 0px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
  }

  .main-about {
    width: 100%;
    max-width: 1000px;
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 5rem;
    margin: 0 1rem;
  }

  .about article {
    position: relative;
    max-width: 400px;
    width: 60%;
    height: auto;
    transition: all 0.3s ease;
    flex: 1;
  }

  .about article img:first-child {
    box-shadow: 0 60px 60px -60px rgba(240, 250, 0, 0.5);
    border-radius: 10px;
    object-fit: cover;
    width: 100%;
    height: auto;
  }

  .about article img:last-child {
    position: absolute;
    width: 100%;
    height: auto;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    transform: translateY(25%);
    transition: 0.3s ease;
    opacity: 0;
  }

  .about article:hover {
    transform: perspective(250px) rotateX(10deg) translateY(-5%) translateZ(0);
  }

  .about article::before {
    content: '';
    position: absolute;
    bottom: 0;
    height: 100%;
    width: 100%;
    background-image: linear-gradient(
      to bottom,
      transparent 10%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0) 95%
    );
    opacity: 0;
    transition: all 0.3s ease;
  }

  .about article:hover::before {
    opacity: 1;
  }

  .about article:hover img:last-child {
    opacity: 1;
    transform: translateY(10%);
  }

  .about-text {
    flex: 1;
    max-width: 550px;
    padding-bottom: 0 20px;
    position: relative;
  }

  .about-text h2 {
    color: var(--footer-color);
    font-size: 4rem;
    text-transform: capitalize;
    margin-bottom: 20px;
    font-weight: 900;
    display: block;
    position: relative;
  }

  .about-text h2::after {
    position: absolute;
    content: '';
    height: 4%;
    width: 8%;
    bottom: 5%;
    background-color: var(--third-color);
  }

  .about-text h5 {
    color: var(--footer-color);
    font-size: 25px;
    text-transform: capitalize;
    margin-bottom: 25px;
    letter-spacing: 2px;
  }

  .about-text span {
    color: var(--dark-color);
    font-weight: 900;
  }

  .about-text p {
    color: var(--footer-color);
    letter-spacing: 1px;
    line-height: 28px;
    font-size: 18px;
    margin-bottom: 45px;
    text-wrap: pretty;
  }

  .about-text a {
    background: var(--third-color);
    color: var(--bg-color);
    text-decoration: none;
    border: 1px solid transparent;
    font-weight: 800;
    padding: 13px 30px;
    border-radius: 10px;
    transition: 0.4s ease;
    box-shadow: var(--shadow-elevation-medium2);
    font-size: 1rem;
    cursor: pointer;
  }

  .about-text a:hover {
    background: transparent;
    border: 1px solid white;
    color: var(--footer-color);
  }

  .about-text #splash2 {
    z-index: -1;
    position: absolute;
    top: 40%;
    left: 47%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: auto;
    filter: saturate(130%);
    animation: animateSplash 4s linear infinite;
  }

  @keyframes animateSplash {
    50% {
      top: 37%;
      left: 45%;
      width: 105%;
    }
  }

  @media (max-width: 750px) {
    .main-about {
      flex-direction: column;
      flex-direction: column-reverse;
    }

    .about-text h2 {
      text-align: center;
    }

    .about-text h5 {
      text-align: center;
    }

    .about-text p {
      text-align: center;
    }

    .center-button {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }

  @media (max-width: 600px) {
    .about-text h2 {
      font-size: 3rem;
    }

    .about-text h5 {
      font-size: 1.4rem;
    }

    .about-text p {
      font-size: 1rem;
    }
  }
</style>
